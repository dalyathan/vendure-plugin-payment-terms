{
    "compilerOptions": {
      "strict": true,
      "lib": ["es2021"],
      "module": "commonjs",
      "rootDir": "src",
      "target": "es2021",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "sourceMap": false,
      "skipLibCheck": true,
      "outDir": "dist",
      "types": ["node"]
    },
    "include": ["src/", "test/resolvers"],
  }